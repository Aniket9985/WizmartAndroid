<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:elevation="25sp"
    tools:context="com.wiz.wizmart.pages.CategoryActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        android:id="@+id/net"
        android:textColor="@color/grey"
        android:background="@drawable/light_bg"
        android:visibility="gone"
        android:text="Please Connect To network And Try Again"/>
    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/navy"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aniket"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/product_sans_bold_italic"/>
                <ImageView
                    android:id="@+id/imgPerson"
                    android:layout_width="30dp"
                    android:layout_height="30sp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_baseline_settings_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"/>
                <androidx.appcompat.widget.SearchView
                    android:id="@+id/serchviw"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_below="@id/imgPerson"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ser_bg"
                    android:layout_gravity="end"
                    app:iconifiedByDefault="false"
                    app:queryHint="Search categories Here... " />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/l1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/wm"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyt"
            android:layout_marginTop="8sp"
            android:orientation="horizontal">
            <com.smarteist.autoimageslider.SliderView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal"
                app:sliderIndicatorMargin="15sp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="@color/ba_color"
                app:sliderIndicatorUnselectedColor="@color/white"
                app:sliderScrollTimeInSec="3"
                android:id="@+id/slider"
                android:elevation="10dp"
                app:sliderStartAutoCycle="true"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyt3"
            android:layout_marginTop="8dp"
            android:layout_above="@id/lyt4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="20sp"
                android:id="@+id/txt"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/product_sans_bold_italic"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/l"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFD700"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_below="@id/txt"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerCat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </RelativeLayout>
        <LinearLayout
            android:id="@+id/lyt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottomBar"
                app:itemBackground="@color/navy"
                app:itemTextColor="@drawable/bottom_color"
                app:menu="@menu/menu"
                app:itemIconTint="@drawable/bottom_color"/>

        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>