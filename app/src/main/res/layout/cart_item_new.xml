<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10sp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bottom"
                android:src="@drawable/ic_baseline_delete_white"
                android:layout_gravity="end"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="15sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:id="@+id/cart_img"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_search_24" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/cart_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_gutio"
                android:text="Potato"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Price/Pack Size"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans_bold"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/cart_prise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="9dp"
                android:layout_marginStart="25sp"
                android:layout_marginBottom="10sp"
                android:weightSum="3">
                <ImageButton
                    android:id="@+id/minus"
                    android:layout_width="35dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/black"
                    android:src="@drawable/ic_baseline_minimize_24"/>
                <EditText
                    android:id="@+id/cart_qty"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="0dp"
                    android:textAlignment="center"
                    android:background="@drawable/txt_bg" />

                <ImageButton
                    android:id="@+id/qtyAdd"
                    android:layout_width="35dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/purple_700"
                    android:src="@drawable/ic_baseline_add_24" />
                <TextView
                    android:id="@+id/cart_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_gutio"
                    android:text="Rs.400"
                    android:layout_marginEnd="30dp"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>